<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1 class=""><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" alt="" width="700px" class="mt-3" />
      <p class="mt-3"><%= blog.body %></p>
    </div>

    <div class="container mt-4">
      <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="70px" /><%=
      blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
      <h1>Add your comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Enter comments here!</label
          >
          <input type="text" name="content" class="form-control" />
          <button type="submit" class="btn btn-sm btn-primary">Submit</button>
        </div>
      </form>
      <% } %>
    </div>

    <div class="mt-3">
      <% comments.forEach(comment => { %>
      <img src="<%= comment.createdBy.profileImageURL %>" alt="" />
      <%= comment.createdBy.fullName %> <% }) %>
      <pre><%= comment.content %></pre>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
